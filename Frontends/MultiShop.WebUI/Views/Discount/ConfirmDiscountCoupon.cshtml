@model BasketTotalDto
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
<div class="col-lg-4">
    <form class="mb-30" asp-controller="Discount" asp-action="ConfirmDiscountCoupon" method="post">
        <div class="input-group">
            <input type="text" class="form-control border-0 p-4" value="@ViewBag.code" placeholder="Kupon Kodu Giriniz..." name="code">
            <div class="input-group-append">
                <button class="btn btn-primary">Kupon Uygula</button>
            </div>
        </div>
    </form>
    <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Sipariş Özeti</span></h5>
    <div class="bg-light p-30 mb-5">
        <div class="border-bottom pb-2">
            <div class="d-flex justify-content-between mb-3">
                <h6>Toplam Ürün Fiyatı</h6>
                <h6>@Model.TotalPrice<b>₺</b></h6>
            </div>
            <div class="d-flex justify-content-between">
                <h6 class="font-weight-medium">Kdv</h6>
                <h6 class="font-weight-medium">@ViewBag.KdvPrice<b>₺</b></h6>
            </div>
            <div class="d-flex justify-content-between">
                <h6 class="font-weight-medium">İndirim Oranı</h6>
                <h6 class="font-weight-medium"><b>%</b>@ViewBag.Rate</h6>
            </div>
            <div class="d-flex justify-content-between">
                <h6 class="font-weight-medium">İndirimsiz Toplam Fİyat</h6>
                <h6 class="font-weight-medium">@ViewBag.KdvTotalPrice<b>₺</b></h6>
            </div>
        </div>
        <div class="pt-2">
            <div class="d-flex justify-content-between mt-2">
                <h5>İndirimli Yeni Fiyat</h5>
                <h5>@ViewBag.TotalNewPriceWithDiscount<b>₺</b></h5>
            </div>
            <button class="btn btn-block btn-primary font-weight-bold my-3 py-3">Ödeme Adımına Geç</button>
        </div>
    </div>
</div>