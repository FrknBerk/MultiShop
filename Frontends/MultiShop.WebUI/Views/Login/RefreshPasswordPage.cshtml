
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8">
    <title>RefreshPasswordPage</title>
    <!-- Mobile Specific Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <link rel="stylesheet" href="~/colorlib-regform-30/css/style.css" />
</head>
<body>
    <div class="page-content">
        <div class="form-v4-content">
            <form method="post" class="form-detail">
                <h2>Şifremi Unuttum...</h2>
                <div class="form-row">
                    <input id="Email" type="hidden" value="@ViewBag.Email" />
                    <label for="refreshPassword">Yeni Şifre</label>
                    <input type="password" id="refreshPassword" name="refreshPassword" class="input-text" required>
                    <br />
                    <label for="refreshPassword">Yeni Şifre Tekrar</label>
                    <input type="password" id="refreshPasswordRepeat" name="refreshPassword" class="input-text" required>
                </div>
                <div>
                    <input type="button" id="UpdatePassword" class="bttn" value="Şifre Yenile"/>
                </div>
            </form>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-1.11.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/additional-methods.min.js"></script>
</body>
</html>
<script>
    const input = document.querySelector("#refreshPassword");
    const refreshPassword = document.getElementById("refreshPasswordRepeat");

    input.addEventListener("input", updateValue);

    function updateValue(e) {
        console.log(e.target.value);
        refreshPassword.value = e.target.value;
    }

    $(document).ready(function () {
        $("#UpdatePassword").click(function () {

            var password = $('#refreshPassword').val();
            var email = $('#Email').val();
            
            var url = "/Login/RefreshPassword";
            $.ajax({
                type: "POST",
                url: url,
                data: { password: password,email : email },
                success: function (response) {
                },
                Error: function (error) {
                    console.log(error);
                }
            });
        });
    });
</script>