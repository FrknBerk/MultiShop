@model CreateOrderAddressDto

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/_UILayout.cshtml";
}

<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-lg-8">
            <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Sipariş Teslimat Ve Fature Adresi</span></h5>
            <div class="bg-light p-30 mb-5">
                <form method="post">
                    <div class="row">
                        <div class="col-md-6 form-group">
                            <label>Adınız</label>
                            <input class="form-control" type="text" asp-for="Name" placeholder="Ad...">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Soyadınız</label>
                            <input class="form-control" type="text" asp-for="Surname" placeholder="Soyad...">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>E-mail</label>
                            <input class="form-control" type="text" asp-for="Email" placeholder="example@email.com">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Telefon</label>
                            <input class="form-control" type="text" asp-for="PhoneNumber" placeholder="Telefon...">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Address Satır 1</label>
                            <input class="form-control" type="text" asp-for="Detail1" placeholder="123 Mahallesi...">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Address Satır 2</label>
                            <input class="form-control" type="text" asp-for="Detail2" placeholder="123 Sokak...">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Ülke</label>
                            <input class="form-control" type="text" asp-for="Country" placeholder="Türkiye...">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Şehir</label>
                            <input class="form-control" type="text" asp-for="City" placeholder="Şehir...">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>İlçe</label>
                            <input class="form-control" type="text" asp-for="District" placeholder="İlçe...">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Posta Kodu</label>
                            <input class="form-control" type="text" asp-for="ZipCode" placeholder="Posta Kodu...">
                        </div>
                        <div class="col-md-12 form-group">
                            <label>Açıklama</label>
                            <input class="form-control" type="text" asp-for="Description" placeholder="Açıklama...">
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-lg-4">
            <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Sipariş Özeti</span></h5>
            @await Component.InvokeAsync("_OrderSummaryComponentPartial")
            
            @await Component.InvokeAsync("_PaymentMethodComponentPartial")
        </div>
    </div>
</div>
