@model UserDetailViewModel
@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<div class="container">
    <br /><br /><br />
    <h3>Kullanıcı Profil Bilgisi</h3>
    <div class="alert alert-warning">Kullanıcı Id  : @Model.Id</div>
    <div class="alert alert-warning">Kullanıcı Adı : @Model.UserName</div>
