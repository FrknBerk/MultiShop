@model List<ResultCommentDto>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
<!-- messages-menu -->
<!-- Notifications Menu -->
<li class="dropdown notifications-menu">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        <i class="icon-megaphone"></i>
        @if (ViewBag.UnconfirmedProductComment > 0)
        {
            <div class="notify"> <span class="heartbit">@ViewBag.UnconfirmedProductComment</span> <span class="point"></span> </div>
        }
    </a>
    <ul class="dropdown-menu">
        <li class="header">Onaylanmamış @ViewBag.UnconfirmedProductComment Yorum</li>
        <li>
            <ul class="menu">
                @foreach (var item in Model)
                {
                    <li>
                        <a href="/Admin/Comment/UpdateComment/@item.UserCommentId">
                            <i class="icon-lightbulb"></i> @item.CommentDetail
                        </a>
                    </li>
                }
            </ul>
        </li>
        <li class="footer"><a href="/Admin/Comment/Index/">Tüm yorumları gör</a></li>
    </ul>
</li>