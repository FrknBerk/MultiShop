@model List<ResultMessageDto>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
<li class="dropdown messages-menu">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        <i class="fas fa-sms"></i>
        @if (ViewBag.AdminUnReadMessageCount > 0)
        {
            <div class="notify"> <span class="heartbit">@ViewBag.AdminUnReadMessageCount</span> <span class="point"></span> </div>
        }
    </a>
    <ul class="dropdown-menu">
        <li class="header">Mesajlar</li>
        <li>
            <ul class="menu">
                @if (Model != null)
                {
                    foreach (var item in Model)
                    {
                        <li>
                            <a href="/Admin/Message/MessageList/">
                                @* <div class="pull-left"><img src="~/MainDownload-OvioAdmin-html5-template/html/dist/img/img1.jpg" class="img-circle" alt="User Image"></div> *@
                                <h4>@item.Subject</h4>
                                <p>@item.MessageDetail</p>
                                <p><small><i class="fa fa-clock-o"></i>@item.MessageDate</small></p>
                            </a>
                        </li>
                    }
                }
            </ul>
        </li>
        <li class="footer"><a href="/Admin/Message/MessageList/">Tüm Mesajları Kontrol Et</a></li>
    </ul>
</li>