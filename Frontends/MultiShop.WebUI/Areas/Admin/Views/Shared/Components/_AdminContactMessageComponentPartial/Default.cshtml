@model List<ResultContactDto>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
<li class="dropdown messages-menu">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        <i class="icon-envelope"></i>
        @if (ViewBag.ContactMessageCount > 0)
        {
            <div class="notify"> <span class="heartbit">@ViewBag.ContactMessageCount</span> <span class="point"></span> </div>
        }
    </a>
    <ul class="dropdown-menu">
        <li class="header">Okunmamış @ViewBag.ContactMessageCount mesaj</li>
        <li>
            <ul class="menu">
                @if (Model != null)
                {
                    @foreach (var item in Model)
                    {
                        <li>
                            <a href="/Admin/Contact/ContactDetail/@item.ContactId">
                                <div class="pull-left"><img src="~/MainDownload-OvioAdmin-html5-template/html/dist/img/img1.jpg" class="img-circle" alt="User Image"></div>
                                <h4>@item.Subject</h4>
                                <p>@item.Message</p>
                                <p><small><i class="fa fa-clock-o"></i> @item.SendDate</small></p>
                            </a>
                        </li>
                    }
                }
            </ul>
        </li>
        <li class="footer"><a href="/Admin/Contact/ContactList/">Tüm Mesajları Kontrol Et</a></li>
    </ul>
</li>