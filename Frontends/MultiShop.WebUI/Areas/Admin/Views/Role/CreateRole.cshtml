@model CreateRoleDto
@{
    ViewData["Title"] = "CreateRole";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <div class="bs-example" data-example-id="bordered-table">
                    <form method="post">
                        <input type="text" class="form-control" name="Name" asp-for="Name" placeholder="Role Adı Giriniz..." />
                        <br />
                        <button class="btn btn-primary">Yeni Role Girişi</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

