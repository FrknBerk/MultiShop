@model UpdateFeatureDto
@{
    ViewData["Title"] = "UpdateFeature";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <div class="bs-example" data-example-id="bordered-table">
                    <form method="post">
                        <input type="hidden" class="form-control" asp-for="FeatureId" placeholder="Öne Çıkan Alan Id..." />
                        <br />
                        <label>Öne Çıkan Alan Başlığı</label>
                        <input type="text" class="form-control" asp-for="Title" placeholder="Öne Çıkan Alan Başlığı..." />
                        <br />
                        <label>Öne Çıkan Alan İkon</label>
                        <input type="text" class="form-control" asp-for="Icon" placeholder="Öne Çıkan Alan İkon..." />
                        <br />
                        <button class="btn btn-primary">Öne Çıkan Alan Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>