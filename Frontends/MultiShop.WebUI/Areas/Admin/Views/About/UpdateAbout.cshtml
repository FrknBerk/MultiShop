@model UpdateAboutDto
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <div class="bs-example" data-example-id="bordered-table">
                    <form method="post">
                        <input type="hidden" class="form-control" asp-for="AboutId" placeholder="About Id..." />
                        <br />
                        <label>Açıklama</label>
                        <input type="text" class="form-control" asp-for="Description" placeholder="Açıklama..." />
                        <br />
                        <label>Adres</label>
                        <input type="text" class="form-control" asp-for="Address" placeholder="Adres..." />
                        <br />
                        <label>Email</label>
                        <input type="text" class="form-control" asp-for="Email" placeholder="Email..." />
                        <br />
                        <label>Telefon</label>
                        <input type="text" class="form-control" asp-for="Phone" placeholder="Telefon..." />
                        <br />
                        <button class="btn btn-primary">Hakkımda Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>


