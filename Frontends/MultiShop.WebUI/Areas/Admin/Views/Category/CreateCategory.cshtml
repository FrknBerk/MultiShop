@model CreateCategoryDto
@{
    ViewData["Title"] = "CreateCategory";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}


<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <div class="bs-example" data-example-id="bordered-table">
                    <form method="post">
                        <input type="text" class="form-control" name="CategoryName" placeholder="Kategori Adı Giriniz..." />
                        <br />
                        <input type="text" class="form-control" name="ImageUrl" placeholder="Kategori Resmi Giriniz..." />
                        <br />
                        <button class="btn btn-primary">Yeni Kategori Girişi</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>