@model UpdateCategoryDto
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <div class="bs-example" data-example-id="bordered-table">
                    <form method="post">
                        <input type="hidden" class="form-control" asp-for="CategoryId" placeholder="Kategori Id" readonly />
                        <br />
                        <input type="text" class="form-control" asp-for="CategoryName" placeholder="Kategori Adı Giriniz..." />
                        <br />
                        <button class="btn btn-warning">Kategori Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>