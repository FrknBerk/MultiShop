@model UpdateFeatureSliderDto
@{
    ViewData["Title"] = "UpdateFeatureSlider";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <div class="bs-example" data-example-id="bordered-table">
                    <form method="post">
                        <input type="hidden" class="form-control" asp-for="FeatureSliderId" placeholder="Görsel Id..." />
                        <br />
                        <label>Görsel Başlığı</label>
                        <input type="text" class="form-control" asp-for="Title" placeholder="Görsel Başlığı..." />
                        <br />
                        <label>Görsel Açıklması giriniz</label>
                        <input type="text" class="form-control" asp-for="Description" placeholder="Görsel Açıklaması..." />
                        <br />
                        <label>Görsel Linki</label>
                        <input type="text" class="form-control" asp-for="ImageUrl" placeholder="Görsel Linki..." />
                        <br />
                        <label>Görsel Durumu</label>
                        <input type="checkbox" class="form-control" asp-for="Status" placeholder="Görsel Durumu..." />
                        <br />
                        <button class="btn btn-primary">Öne Çıkan Slider Görseli Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>