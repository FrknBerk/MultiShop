@model List<ResultOrderingByUserIdDto>

@{
    ViewData["Title"] = "MyOrderList";
    Layout = "~/Views/UILayout/_UILayout.cshtml";
    int count = 0;
}

<div class="container">
    <div class="col-md-12">
        <div>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Toplam Fiyat</th>
                        <th>Sipariş Tarihi</th>
                        <th>Sipariş Detayları</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <th scope="row">@count</th>
                            <td>@item.TotalPrice</td>
                            <td>@(((DateTime)item.OrderDate).ToString("dd-MMM-yyyy"))</td>
                            <td><a href="#" class="btn btn-primary">Sipariş Detayları</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
